<% provide(:title, 'Visualizar Curso') %>
<h1>Visualizar Curso</h1>

<div class="list-group">
  <a href="#" class="list-group-item active">
    <h4 class="list-group-item-heading"><%= @curso.nome%></h4>
    <p class="list-group-item-text">Descrição: <%= @curso.descricao%></p>
    <p class="list-group-item-text">Status: <%= @curso.status == 1 ? 'ATIVO' : 'INATIVO'%></p>
  </a>
</div>

<div class="form-actions">
    <%= link_to t('.new', :default => t("helpers.links.back")),
    cursos_path,
    :class => 'btn btn-primary btn-sm active' %>
</div>