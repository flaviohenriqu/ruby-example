<% provide(:title, 'CRUD Cursos') %>
<h1>CRUD Cursos</h1>

<% unless @cursos.blank? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Status</th>
          <th><%=t '.actions', :default => 'Ações' %></th>
        </tr>
      </thead>
      <tbody>
        <% @cursos.each.with_index do |s,index| %>
            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= s.nome %></td>
              <td><%= s.descricao %></td>
              <td><%= s.status == 1 ? 'ATIVO' : 'INATIVO' %></td>
              <td>
                <%= link_to image_tag('edit.png'), edit_curso_path(s), :class => 'quick-edit',:title => 'editar' %>
                <%= link_to image_tag('delete.png'), curso_path(s), :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
                            :default => 'Você tem certeza?')) },
                            :class => '', :title => 'deletar' %>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
    Nenhum curso cadastrado!
<% end %>

<div class="form-actions">
    <%= link_to t('.new', :default => t("helpers.links.new")),
    new_curso_path,
    :class => 'btn btn-primary btn-sm active' %>
</div>